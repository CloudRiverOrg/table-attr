$bc = #c9c9c9
p
  margin 0
  padding 0
.data-table
  border 1px solid $bc;
  width 1210px
  margin 0 auto
  border-radius: 4px
  position relative
  .origin-mark
    position absolute
    z-index 1
    top: 50%
    left 50%
    transform: translate(-50%, -50%);
    
.row + .row
  border-top 1px solid $bc
.row
  display grid
  grid-template-columns: repeat(16, 1fr)
  position relative
  z-index 2
  .col
    border-left 1px solid $bc
    display flex
    flex-direction: column
    justify-content: center
    direction: columns 
    .hero
      padding: 1px 2px
      border-width:  1px
      border-style solid
      border-radius: 2px;
      flex 0
      line-height 18px
      margin-bottom 4px
      display inline-block
      color #666

.hero.star-1
  border-color: #8c8c8c
  box-shadow: inset 0 0 4px 1px #a5a5a5
  color #999
.hero.star-2
  border-color #b7d28d
  box-shadow: inset 0 0 4px 1px  #dcff93
.hero.star-3
  border-color #51b2ff
  box-shadow: inset 0 0 4px 1px #a7d8ff
.hero.star-4
  border-color #b54fff
  box-shadow: inset 0 0 4px 1px #f1b8e4
.hero.star-5
  border-color gold
  box-shadow: inset 0 0 4px 1px #ffee9f